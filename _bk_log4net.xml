<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>

    <!-- 通常ログ -->
    <appender name="NormalLogAppender" type="log4net.Appender.RollingFileAppender">
      <!--ログパス及びファイル名-->
	    <file value="./log/Log_" />
      <!-- 追記モードの設定：[true]追記-->
      <appendToFile value="true" />
      <!--ローリングの基準。Size または Date を指定する-->
      <rollingStyle value="Date" />
	    <!--ログファイル名：[false]rollingStyle とdatePatternに基づいたファイル名-->
      <StaticLogFileName value="false" />
			<!--rollingStyleがdateまたはCompositeの際にファイル名に付与される文字列。-->
      <DatePattern value='"."yyyy-MM-dd".log"' />
			<!--ログ出力フィルタ：ログレベル Debug～Warm-->
      <filter type="log4net.Filter.LevelRangeFilter">
				<!--最小：Debug-->
				<levelMin value="Debug" />
				<!--最大：Warm-->
				<levelMax value="Warn" />
      </filter>
			<!--ログ出力レイアウト-->
      <layout type="log4net.Layout.PatternLayout">
				<!--%日時[%スレッド番号]-%ログレベル %ロガー名 - %指定メッセージ%行数-->
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

    <!-- エラーログ -->
    <appender name="ErrorLogAppender" type="log4net.Appender.RollingFileAppender">
      <!--ログパス及びファイル名-->
		  <File value="./log/Error.log" />
		  <!-- true でログをファイルに追記する。-->
		  <AppendToFile value="true" />
		  <!--ローリングの基準。Size または Date を指定する-->
		  <rollingStyle value="Size" />
			<!--ファイルを切替えるマックス数-->
      <maxSizeRollBackups value="10" />
			<!--rollingStyle がSizeまたはCompositeの時の最大ファイルサイズ-->
      <maximumFileSize value="1MB" />
		  <!--ログファイル名：(false)rollingStyle とdatePatternに基づいたファイル名-->
		  <StaticLogFileName value="false" />
			<!--ログ出力フィルタ：ログレベル Debug-->
			<filter type="log4net.Filter.LevelRangeFilter">
				<!--最小：Debug-->
				<levelMin value="Error" />
				<!--最大：Debug-->
				<levelMax value="Error" />
      </filter>
			<!--ログ出力レイアウト-->
			<layout type="log4net.Layout.PatternLayout">
				<!--%日時[%スレッド番号]-%ログレベル %ロガー名 - %指定メッセージ%行数-->
				<ConversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>

     <!-- トレース -->
     <appender name="AspNetTraceAppender" type="log4net.Appender.AspNetTraceAppender" >
			 <!--ログ出力レイアウト-->
			 <layout type="log4net.Layout.PatternLayout">
				 <!--%日時[%スレッド番号]-%ログレベル %ロガー名 - %指定メッセージ%行数-->
				 <ConversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
       </layout>
     </appender>

     <root>
       <appender-ref ref="NormalLogAppender" />
       <appender-ref ref="ErrorLogAppender" />
       <appender-ref ref="AspNetTraceAppender" />
     </root>

  </log4net>
</configuration>
